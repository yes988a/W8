<resources>

    <!-- 通用样式规范 -->

    <!-- 右箭头样式-->
    <style name="right_postion">
        <item name="android:layout_width">@dimen/right_arrow_w</item>
        <item name="android:layout_height">@dimen/right_arrow_h</item>
        <item name="android:paddingRight">@dimen/simall_margin</item>
        <item name="android:paddingBottom">@dimen/nor_margin</item>
        <item name="android:paddingTop">@dimen/nor_margin</item>
        <item name="android:contentDescription">@string/right_postion</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/ic_arrowright</item>
    </style>

    <!--可点击图标大小-->
    <style name="click_img">
        <item name="android:layout_width">@dimen/phone_mess_w_h</item>
        <item name="android:layout_height">@dimen/phone_mess_w_h</item>
        <item name="android:layout_marginRight">@dimen/nor_margin</item>
        <item name="android:layout_marginBottom">@dimen/nor_margin</item>
        <item name="android:layout_marginTop">@dimen/nor_margin</item>
        <item name="android:contentDescription">@string/click_img</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <!--view水平分割线样式-->
    <style name="view_h">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/simalls</item>
        <item name="android:background">@color/lightgray</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AlbumAppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AlbumPopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- MatchParent -->

    <style name="AlbumMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- WrapContent -->

    <style name="AlbumWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AlbumWrapContent.WidthMatchParent">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AlbumToolbar" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="AlbumToolbar.PopupTheme">
        <item name="popupTheme">@style/AlbumPopupOverlay</item>
    </style>

    <!-- CheckBox -->

    <style name="AlbumCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox" />

    <style name="AlbumCheckBox.WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AlbumDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AlbumDialogStyle.Folder">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="AlbumDialogStyle.Preview">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <!-- Button -->
    <style name="AlbumButtonText" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
