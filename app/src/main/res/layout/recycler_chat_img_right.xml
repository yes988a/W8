<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/chat_margin"
    android:paddingLeft="@dimen/nor_margin"
    android:paddingRight="@dimen/nor_margin"
    android:paddingTop="@dimen/chat_margin">

    <TextView
        android:id="@+id/chat_img_right_id"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/chat_leftright"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/progress_chat_img_right"
            style="?android:attr/progressBarStyleSmallInverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/chat_img_send_err_right"
            android:layout_width="@dimen/chat_send_err"
            android:layout_height="@dimen/chat_send_err"
            android:src="@drawable/chat_send_err"
            android:visibility="gone"
            android:contentDescription="@string/fail"/>

        <ImageView
            android:id="@+id/chat_img_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:focusable="true"
            android:maxHeight="@dimen/chat_img_max"
            android:maxWidth="@dimen/chat_img_max"
            android:minHeight="@dimen/chat_img_min"
            android:minWidth="@dimen/chat_img_min" />
    </LinearLayout>

    <ImageView
        android:id="@+id/chat_img_head_right"
        android:layout_width="@dimen/chat_head"
        android:layout_height="@dimen/chat_head"
        android:contentDescription="@string/head" />

</LinearLayout>