<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <View
        style="@style/view_h"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin" />

    <TextView
        android:id="@+id/instructions_rid"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <LinearLayout
        android:id="@+id/instructions_lineBig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/head_active"
            android:layout_height="@dimen/head_active"
            android:contentDescription="@string/welcome_use"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingRight="@dimen/big_margin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/big_margin"
            android:text="@string/welcome_use"
            android:textColor="@color/lightblue"
            android:textSize="@dimen/text_overt"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        style="@style/view_h"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin" />
</LinearLayout>
