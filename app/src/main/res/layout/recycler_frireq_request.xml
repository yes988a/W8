<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <View style="@style/view_h" />

    <TextView
        android:id="@+id/friReq_rid"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <LinearLayout
        android:id="@+id/friReq_lineBig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/friReq_imghead"
            android:layout_width="@dimen/head_active"
            android:layout_height="@dimen/head_active"
            android:contentDescription="@string/head"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingRight="@dimen/big_margin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/friReq_uname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:minLines="1"
                    android:textSize="@dimen/text_overt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/friReq_endtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/friReq_uname"
                    android:minLines="1"
                    android:paddingLeft="@dimen/nor_margin"
                    android:paddingRight="@dimen/activity_margin"
                    android:textSize="@dimen/text_small" />

            </RelativeLayout>

            <TextView
                android:id="@+id/friReq_enddes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small" />

        </LinearLayout>
    </LinearLayout>

    <View style="@style/view_h" />
</LinearLayout>
