<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/chat_margin"
    android:paddingLeft="@dimen/nor_margin"
    android:paddingRight="@dimen/nor_margin"
    android:paddingTop="@dimen/chat_margin">

    <TextView
        android:id="@+id/chat_txt_left_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/chat_txt_head_left"
        android:layout_width="@dimen/chat_head"
        android:layout_height="@dimen/chat_head"
        android:contentDescription="@string/head" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/chat_leftright"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/chat_txt_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/chat_left_up"
            android:textSize="@dimen/text_overt" />
    </LinearLayout>
</LinearLayout>